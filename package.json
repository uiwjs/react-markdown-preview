{
  "private": true,
  "scripts": {
    "build": "npm run build:lib",
    "build:lib": "lerna exec --scope @uiw/* -- npm run build",
    "build:doc": "lerna exec --scope website -- npm run build",
    "doc": "lerna exec --scope website -- npm run start",
    "start": "lerna exec --scope @uiw/* -- npm run watch",
    "prepare": "npm run build && husky install",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "pretty-quick": "pretty-quick --staged",
    "test": "tsbb test --env=jsdom",
    "coverage": "tsbb test --env=jsdom --coverage"
  },
  "jest": {
    "coverageReporters": [
      "lcov",
      "json-summary"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/?!(.*)"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/react": "~18.0.9",
    "@types/react-dom": "~18.0.3",
    "@types/react-test-renderer": "~18.0.0",
    "@kkt/ncc": "^1.0.15",
    "compile-less-cli": "~1.8.11",
    "husky": "~8.0.0",
    "prettier": "^2.7.1",
    "pretty-quick": "~3.1.3",
    "lerna": "^6.1.0",
    "tsbb": "^3.7.9"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "workspaces": [
    "core",
    "website"
  ]
}
