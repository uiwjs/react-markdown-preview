{
  "name": "@uiw/react-markdown-preview",
  "version": "3.4.5",
  "description": "React component preview markdown text in web browser. The minimal amount of CSS to replicate the GitHub Markdown style.",
  "homepage": "https://uiwjs.github.io/react-markdown-preview",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "scripts": {
    "prepare": "npm run build && husky install",
    "doc": "kkt build --app-src ./website",
    "start": "kkt start --app-src ./website",
    "css:build": "compile-less -d src -o esm",
    "css:watch": "compile-less -d src -o esm --watch",
    "css:build:dist": "compile-less -d src --combine markdown.css --rm-global",
    "watch": "tsbb watch & npm run css:watch",
    "build": "tsbb build && npm run css:build && npm run css:build:dist",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "pretty-quick": "pretty-quick --staged",
    "test": "tsbb test --env=jsdom",
    "coverage": "tsbb test --env=jsdom --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uiwjs/react-markdown-preview.git"
  },
  "author": "kenny wang <wowohoo@qq.com>",
  "license": "MIT",
  "files": [
    "lib",
    "esm",
    "markdown.css",
    "src"
  ],
  "keywords": [
    "react",
    "markdown",
    "prismjs",
    "react-markdown"
  ],
  "jest": {
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/?!(.*)"
    ]
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@babel/runtime": "7.16.3",
    "@mapbox/rehype-prism": "0.8.0",
    "@uiw/copy-to-clipboard": "1.0.12",
    "react-markdown": "7.1.1",
    "rehype-attr": "2.0.7",
    "rehype-autolink-headings": "6.1.0",
    "rehype-raw": "6.1.0",
    "rehype-rewrite": "3.0.4",
    "rehype-slug": "5.0.1",
    "remark-gfm": "3.0.1"
  },
  "devDependencies": {
    "@kkt/less-modules": "6.11.0",
    "@kkt/raw-modules": "6.11.0",
    "@kkt/scope-plugin-options": "6.11.0",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "@types/react-test-renderer": "17.0.1",
    "@uiw/react-codesandbox": "1.1.0",
    "@uiw/react-github-corners": "1.5.3",
    "@uiw/react-shields": "1.1.2",
    "@uiw/reset.css": "1.0.5",
    "compile-less-cli": "1.8.9",
    "husky": "7.0.4",
    "jest": "27.4.4",
    "kkt": "6.11.0",
    "prettier": "2.5.1",
    "pretty-quick": "3.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2",
    "tsbb": "3.5.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
